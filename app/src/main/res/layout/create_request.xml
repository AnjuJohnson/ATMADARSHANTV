<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="0.01dp">

            <TextView
                android:id="@+id/prayertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Prayer Title"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/title"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter prayer Title"
                android:paddingLeft="@dimen/_10sdp"

                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical"

                android:layout_gravity="center|center_vertical"/>

        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/rectangle"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp">

                <TextView
                    android:id="@+id/prayerrdiscription"
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Prayer Description"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/request"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="Enter prayer"
                    android:maxLines="10"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center">

            <TextView

                android:id="@+id/createrequest"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundtextview"
                android:gravity="center|center_vertical"
                android:padding="@dimen/_10sdp"
                android:text="Create Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>